<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autoconfigure="true" autowire="true" public="true" />

        <service id="sylius_invoicing_plugin.converter.billing_data" class="Sylius\InvoicingPlugin\Converter\BillingDataConverter">
            <argument type="service" id="sylius_invoicing_plugin.factory.billing_data" />
        </service>

        <service id="sylius_invoicing_plugin.converter.invoice_shop_billing_data" class="Sylius\InvoicingPlugin\Converter\InvoiceShopBillingDataConverter">
            <argument type="service" id="sylius_invoicing_plugin.factory.shop_billing_data" />
        </service>

        <service id="sylius_invoicing_plugin.converter.line_items" class="Sylius\InvoicingPlugin\Converter\LineItemsConverter">
            <argument type="service" id="sylius_invoicing_plugin.factory.line_item" />
        </service>

        <service id="sylius_invoicing_plugin.converter.tax_items" class="Sylius\InvoicingPlugin\Converter\TaxItemsConverter">
            <argument type="service" id="sylius_invoicing_plugin.factory.tax_item" />
        </service>
    </services>
</container>
